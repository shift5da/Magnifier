<!DOCTYPE html>
<html>
  <head>
    <title>Magnifier</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">

    <div class="wrapper">

      <!-- Preloader -->
      <div class="preloader1 flex-column justify-content-center align-items-center">
        <img class="animation__wobble" src="<%= image_path("AdminLTELogo")%>" alt="AdminLTELogo" height="60" width="60">
      </div>

      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-dark">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
              <i class="fa fa-bars"></i>
            </a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/home" class="nav-link">首页</a>
          </li>
        </ul>

        <ul class="navbar-nav ml-auto">

          <li class="nav-item">
            <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
              <%= session[:current_user_name] %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
              <i class="fa fa-window-maximize"></i>
            </a>
          </li>
        </ul>

      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
          <img src="<%= image_path("AdminLTELogo")%>" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
          <span class="brand-text font-weight-light">中防平台</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">

          <!-- Sidebar Menu -->
          <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
              <!-- Add icons to the links using the .nav-icon class with font-awesome or any other icon font library -->

              <li class="nav-item">
                <a href="/home" class="nav-link">
                  <i class="nav-icon fa fa-laptop-house"></i>
                  <p>
                    首页
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/companies/1" class="nav-link">
                  <i class="nav-icon fa fa-building"></i>
                  <p>
                    企业信息
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="pages/widgets.html" class="nav-link">
                  <i class="nav-icon fa fa-life-ring"></i>
                  <p>
                    产品列表
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="pages/widgets.html" class="nav-link">
                  <i class="nav-icon fa fa-pen-square"></i>
                  <p>
                    申码纪录
                  </p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/users" class="nav-link">
                  <i class="nav-icon fa fa-user"></i>
                  <p>
                    账户管理
                  </p>
                </a>
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper" style='margin-top: 10px;'>
        <%= yield %>
      </div>
      <!-- /.content-wrapper -->

    </div>

  </body>
</html>
